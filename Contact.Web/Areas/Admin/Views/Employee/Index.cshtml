@model PagedList.IPagedList<Contact.Core.DataAccess.Employee >
  @using PagedList.Mvc
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
    <p> 
    @Html.ActionLink("Create New", "Create") 
   </p>
   <div class=" form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            @using (Html.BeginForm())
            {
                <p>

                    <label>Search By Name:</label><input type="search" />
                    <input type="submit" value="Search" class=" btn-primary glyphicon-search" />
                </p>
            }
        </div>

    </div>
    </div>
    <br />
    <br />

    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FirstName)*@
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                User
            </th>
            <th>
                Department
            </th>
            <th>
                Address
            </th>
            <th>
                Date Of Birth
            </th>
            <th>
                Photograph
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td><img src="data:image/png;base64,@Convert.ToBase64String(item.IMageData)" width="70" height="70" /></td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UserID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
                </td>
            </tr>
        }
    </table>
  <br />
        @Html.PagedListPager(Model, p => Url.Action("Index", new { Page, PageSize = Model.PageSize }))
        showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Employees
  
